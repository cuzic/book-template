{
  "name": "book-template",
  "type": "module",
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build:html": "bun run scripts/build.ts --format html",
    "build:xhtml": "bun run scripts/build.ts --format xhtml",
    "build:epub": "bun run scripts/build.ts --format epub",
    "build:site": "bun run scripts/build.ts --format epub && bun run scripts/build.ts --format site",
    "images:prompts": "bun run scripts/generate-image-batch.ts",
    "images:submit": "bun run scripts/submit-image-batch.ts",
    "images:download": "bun run scripts/download-images.ts",
    "lint": "bun run lint:md && bun run lint:text",
    "lint:md": "markdownlint-cli2",
    "lint:text": "textlint \"src/chapters/**/*.md\"",
    "lint:fix": "bun run lint:md:fix && bun run lint:text:fix",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "lint:text:fix": "textlint --fix \"src/chapters/**/*.md\"",
    "batch-improve": "./scripts/batch-improve.sh",
    "check:epub": "bun run scripts/check-epub.ts"
  },
  "dependencies": {
    "unified": "^11",
    "remark-parse": "^11",
    "remark-gfm": "^4",
    "remark-cjk-friendly": "^1",
    "remark-cjk-friendly-gfm-strikethrough": "^1",
    "remark-rehype": "^11",
    "rehype-raw": "^7",
    "rehype-stringify": "^10",
    "epub-gen-memory": "^1",
    "@google/generative-ai": "^0.21"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "markdownlint-cli2": "^0.20.0",
    "textlint": "^15.5.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-jtf-style": "^3.0.3",
    "textlint-rule-prh": "^6.1.0",
    "typescript": "^5"
  }
}
