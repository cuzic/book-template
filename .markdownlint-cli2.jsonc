{
  // markdownlint 厳格設定
  // 例外は個別にインラインマーカーで対応すること
  // <!-- markdownlint-disable MD033 --> で無効化
  // <!-- markdownlint-enable MD033 --> で再有効化
  "config": {
    // 全ルールをデフォルトで有効化
    "default": true,

    // MD001: 見出しレベルは1つずつ増加
    "heading-increment": true,

    // MD003: 見出しスタイルを統一 (ATX: # 形式)
    "heading-style": { "style": "atx" },

    // MD004: リストマーカーを統一 (-)
    "ul-style": { "style": "dash" },

    // MD005: リストインデントを統一
    "list-indent": true,

    // MD007: リストインデントは2スペース
    "ul-indent": { "indent": 2 },

    // MD009: 行末の空白を禁止
    "no-trailing-spaces": true,

    // MD010: タブ文字を禁止
    "no-hard-tabs": true,

    // MD012: 連続する空行を禁止
    "no-multiple-blanks": { "maximum": 1 },

    // MD013: 行の長さ制限（日本語では緩和するが基本は有効）
    "line-length": { "line_length": 200, "code_blocks": false, "tables": false },

    // MD014: コマンド出力にドル記号を付けない
    "commands-show-output": true,

    // MD018: ATX見出しの#の後にスペース必須
    "no-missing-space-atx": true,

    // MD019: ATX見出しの#の後に複数スペース禁止
    "no-multiple-space-atx": true,

    // MD022: 見出しの前後に空行必須
    "blanks-around-headings": true,

    // MD023: 見出しの前にスペース禁止
    "heading-start-left": true,

    // MD024: 同一内容の見出しを許可（章構成で必要な場合あり）
    "no-duplicate-heading": { "siblings_only": true },

    // MD025: 複数のH1を禁止
    "single-h1": true,

    // MD026: 見出し末尾の句読点を禁止
    "no-trailing-punctuation": { "punctuation": ".,;:!?。、；：！？" },

    // MD027: 引用の>の後に複数スペース禁止
    "no-multiple-space-blockquote": true,

    // MD028: 引用ブロック内の空行
    "no-blanks-blockquote": true,

    // MD029: 順序付きリストの番号スタイル
    "ol-prefix": { "style": "ordered" },

    // MD030: リストマーカーの後のスペース
    "list-marker-space": true,

    // MD031: コードブロックの前後に空行必須
    "blanks-around-fences": true,

    // MD032: リストの前後に空行必須
    "blanks-around-lists": true,

    // MD033: インラインHTMLを禁止（必要時は個別に無効化）
    "no-inline-html": true,

    // MD034: 裸のURLを禁止
    "no-bare-urls": true,

    // MD035: 水平線スタイルを統一
    "hr-style": { "style": "---" },

    // MD036: 強調をヘッダー代わりに使用禁止
    "no-emphasis-as-heading": true,

    // MD037: 強調マーカー内のスペース禁止
    "no-space-in-emphasis": true,

    // MD038: コードスパン内のスペース
    "no-space-in-code": true,

    // MD039: リンクテキスト内のスペース
    "no-space-in-links": true,

    // MD040: コードブロックに言語指定必須
    "fenced-code-language": true,

    // MD041: 最初の行はH1見出し必須
    "first-line-heading": true,

    // MD042: 空リンクを禁止
    "no-empty-links": true,

    // MD044: 固有名詞の大文字小文字
    "proper-names": false,

    // MD045: 画像にalt属性必須
    "no-alt-text": true,

    // MD046: コードブロックスタイルを統一（フェンス形式）
    "code-block-style": { "style": "fenced" },

    // MD047: ファイル末尾に改行必須
    "single-trailing-newline": true,

    // MD048: コードフェンススタイルを統一（バッククォート）
    "code-fence-style": { "style": "backtick" },

    // MD049: 強調スタイルを統一（アスタリスク）
    "emphasis-style": { "style": "asterisk" },

    // MD050: 太字スタイルを統一（アスタリスク）
    "strong-style": { "style": "asterisk" }
  },
  "globs": [
    "src/chapters/**/*.md"
  ],
  "ignores": [
    "node_modules/**"
  ]
}
